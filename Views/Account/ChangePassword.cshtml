@{
    ViewBag.Title = "變更密碼";
}

<br /><h4 class="col-lg-offset-1">變更密碼</h4>

<div class="col-md-12 container">
    <div class='validation-summary-errors'><ul /></div>

    <div class="form-group row">    
        <label class="col-md-3 control-label">
            您登入的帳號是 <font style="color:red"><strong>@User.Identity.Name</strong>(@User.FindFirst(ClaimTypes.NameIdentifier).Value)</font>
        </label>
    </div>
    <div class="form-group row">
        <label class="col-md-2 control-label"><span style="color: red">＊</span>舊密碼</label>
        <div class="col-md-2">
            <input type="password" class="form-control" v-model="model.OldPassword">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2 control-label"><span style="color: red">＊</span>新密碼</label>
        <div class="col-md-2">
            <input type="password" class="form-control" v-model="model.NewPassword">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2 control-label"><span style="color: red">＊</span>確認密碼</label>
        <div class="col-md-2">
            <input type="password" class="form-control" v-model="model.ConfirmPassword">
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-4">
            <input type="button" class="btn btn-primary" value="儲存" v-on:click="save" />
        </div>
    </div>
</div>
<script src="~/js/backendBundle.js"></script>

<script type="text/javascript">
var vm = 
    new Vue({
        el: '.container',
        data: {
            model: {},
            errors: [],
        },
        methods: {
            save() {
                // alert(JSON.stringify(this.model));
                var saveUrl = '/Account/ChangePassword';
                ajaxSave(saveUrl, this.model);
            },
        },
        created() {
            this.model.Account = '@User.FindFirst(ClaimTypes.NameIdentifier).Value';
        },
        mounted: function () {
            window.addEventListener('keypress', function (event) {
                if (event.key == "Enter") {
                    vm.save();
                }
            });
        }
    })
</script>