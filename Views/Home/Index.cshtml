@{
    Layout = null;
}

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>CAD</title>
    <link rel="stylesheet" href="~/css/frontendBundle.css" />

</head>
<div id="body" data-spy="scroll">

    <!-- Navigation -->
    <nav class="navbar fixed-top navbar-expand-lg navbar-light" id="mainNav" style="background-color:#5CB0F1">
        <a class="navbar-brand js-scroll-trigger" href="/">
            <!-- test-->
            <img src="~/images/logo.png" class="d-inline-block align-top img-responsive" alt="" />
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="#product">產品系列</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Account/Login">後台</a>
                </li>
            </ul>
        </div>
    </nav>
    <!-- Page Content -->
    <div class="container">
        <section id="product" class="section-area">
            <h1 class="my-4 text-center">產品系列</h1>
            <div class="container">
                <div class="w-100">
                    <!--Tab-->
                    <ul class="nav nav-tabs mb-3 justify-content-center">
                        <li v-for="(category, index) in categories" class="nav-item">
                            <a class="nav-link" v-bind:class="{'active': index == 0}" data-toggle="tab" href="#" v-on:click="getData(category.Code)">{{category.Description}}</a>
                        </li>
                    </ul>
                </div>
                <div class="tab-content">
                    <div v-for="(category, index) in categories" v-bind:class="{'tab-pane': true, 'active': index == 0}">
                        <div class="row justify-content-center align-items-center">
                            <!--列表-->
                            <v-post v-for='post in posts' :post="post"></v-post>
                            <!--分頁處理-->
                            <div class='w-100 row justify-content-center align-items-center'>
                                <ul class='pagination pagination-circle pg-blue mb-0 justify-content-center'>
                                    <li v-for="i in page.PageCount" v-bind:class="{'page-item' : true, 'active': i == page.CurrentPage}" v-on:click="getData(category.key, i)"><a class='page-link'>{{i}}</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <label>速度</label>
                            <div>
                                <input type="range" id="rate" min="1" max="20" value="10" />
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <label>音調</label>
                            <div>
                                <input type="range" id="pitch" min="0" max="2" value="1" />
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <p>請輸入要發音的字</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col-sm-12">
                            <textarea id="message" class="textarea"></textarea>
                        </div>
                    </div>
                    <a href="#" id="speak" class="btn btn-danger">發音</a>
                </div>
            </div>
        </section>
        <div class="w-100"><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /></div>
    </div>
    <footer class="py-5 bg-dark ">
        <div class="container ">
            <p class="m-0 text-center text-white ">Copyright &copy; 2018 CAD</p>
        </div>
        <!-- /.container -->
    </footer>
</div>

<script src="~/js/frontendBundle.js"></script>
